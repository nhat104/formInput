<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/mssv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="MSSV" />

            <EditText
                android:id="@+id/fullname"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:hint="Họ và tên"/>

            <EditText
                android:id="@+id/cccd"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:hint="Số CCCD"/>

            <EditText
                android:id="@+id/phone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:hint="Số điện thoại"/>

            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:hint="Địa chỉ Email"/>

            <CalendarView
                android:id="@+id/calendar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"/>

            <EditText
                android:id="@+id/country"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:hint="Quê quán"/>

            <EditText
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:hint="Nơi ở hiện tại"/>

            <TextView
                android:id="@+id/majors"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:text="Ngành học hiện tại"/>

            <RadioGroup
                android:id="@+id/majors_radio"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <RadioButton
                    android:id="@+id/major1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Khoa học máy tính cứt"/>

                <RadioButton
                    android:id="@+id/major2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Kỹ thuật máy tính chiến"/>
            </RadioGroup>

            <TextView
                android:id="@+id/language"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Ngôn ngữ lập trình"
                android:layout_marginTop="16dp"
                android:textSize="20dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:orientation="vertical">


                <CheckBox
                    android:id="@+id/c"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="C" />

                <CheckBox
                    android:id="@+id/java"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Java" />

                <CheckBox
                    android:id="@+id/python"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Python" />

                <CheckBox
                    android:id="@+id/javaScript"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="JavaScript" />
            </LinearLayout>

            <CheckBox
                android:id="@+id/rule"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="Tôi đồng ý với điều khoản sử dụng"/>

            <Button
                android:id="@+id/submit_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OK"
                android:onClick="validateFullName"/>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>